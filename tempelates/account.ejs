              <path
                d="M377.9 105.9L500.7 228.7c7.2 7.2 11.3 17.1 11.3 27.3s-4.1 20.1-11.3 27.3L377.9 406.1c-6.4 6.4-15 9.9-24 9.9c-18.7 0-33.9-15.2-33.9-33.9l0-62.1-128 0c-17.7 0-32-14.3-32-32l0-64c0-17.7 14.3-32 32-32l128 0 0-62.1c0-18.7 15.2-33.9 33.9-33.9c9 0 17.6 3.6 24 9.9zM160 96L96 96c-17.7 0-32 14.3-32 32l0 256c0 17.7 14.3 32 32 32l64 0c17.7 0 32 14.3 32 32s-14.3 32-32 32l-64 0c-53 0-96-43-96-96L0 128C0 75 43 32 96 32l64 0c17.7 0 32 14.3 32 32s-14.3 32-32 32z">
              </path>
            </svg></div>

          <div class="text">Logout</div>
        </button>
      </form>
      <p class="user-info">Email: <%= user.email %>
      </p>
      <p class="user-info">Mobile Number: <%= user.mob_number %>
      </p>
      <!-- Display any other user information as needed -->
      <% } else { %>
        <p>Please log in to access the dashboard.</p>
        <% } %>
  </div>

  <div class="container">
    <h1 class="books-heading">My Account</h1>

    <h2 class="books-heading">Uploaded Books</h2>

    <% if (books.length> 0) { %>
      <table class="book-table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Price</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% books.forEach((book)=> { %>
            <tr>
              <td>
                <%= book.title %>
              </td>
              <td>
                <%= book.price %>
              </td>
              <td>
                <form class="action-form" action="/account/discard/<%= book._id %>" method="POST">
                  <button class="discard-btn" type="submit">Discard</button>
                </form>
              </td>
            </tr>
            <% }) %>
        </tbody>
      </table>
      <% } else { %>
        <p class="no-books">No books uploaded yet.</p>
        <% } %>
  </div>


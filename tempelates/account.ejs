        <a href="#">CONTACT</a>
        


      </div>
    </div>
  </nav>
  <div class="container">
    <% if (user) { %>
      <h1 class="welcome-heading">Welcome <%= user.email %>
      </h1>
      <form action="/logout" method="GET">

